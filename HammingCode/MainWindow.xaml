<Window x:Class="HammingCode.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Имитация работы кодера и декодера" Height="600" Width="820" ResizeMode="NoResize"
        Icon="/favicon.ico">
    <StackPanel>
        <Menu IsMainMenu="True">
            <MenuItem Header="Кодер" Click="Coder_Click"/>
            <MenuItem Header="Декодер" Click="Decoder_Click" />
            <MenuItem Header="О программе" Click="About_Click" />
        </Menu>
        <Frame x:Name="frame" NavigationUIVisibility="Hidden"/>
    </StackPanel>
</Window>
